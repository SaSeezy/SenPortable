<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <TextView
        android:id="@+id/imeiview"
        android:layout_width="85dp"
        android:layout_height="41dp"
        android:layout_alignParentTop="true"
        android:layout_alignStart="@+id/textView7"
        android:layout_marginTop="102dp"
        android:text="IMEI"
        android:textSize="18sp" />

    <TextView
        android:id="@+id/imei"
        android:layout_width="236dp"
        android:layout_height="43dp"
        android:layout_alignParentEnd="true"
        android:layout_alignTop="@+id/imeiview"
        android:layout_marginEnd="16dp"
        android:textSize="18sp" />

    <TextView
        android:id="@+id/ipadress"
        android:layout_width="89dp"
        android:layout_height="47dp"
        android:layout_alignStart="@+id/imeiview"
        android:layout_alignTop="@+id/ip"
        android:text="IP"
        android:textSize="18sp" />

    <TextView
        android:id="@+id/ip"
        android:layout_width="234dp"
        android:layout_height="47dp"
        android:layout_alignEnd="@+id/imei"
        android:layout_alignParentTop="true"
        android:layout_marginTop="168dp"
        android:textSize="18sp" />

    <TextView
        android:id="@+id/latview"
        android:layout_width="93dp"
        android:layout_height="51dp"
        android:layout_alignStart="@+id/imeiview"
        android:layout_centerVertical="true"
        android:text="lattitude"
        android:textSize="18sp" />

    <TextView
        android:id="@+id/lattitude"
        android:layout_width="235dp"
        android:layout_height="49dp"
        android:layout_alignParentEnd="true"
        android:layout_alignTop="@+id/latview"
        android:layout_marginEnd="14dp"
        android:textSize="18sp" />

    <TextView
        android:id="@+id/textView7"
        android:layout_width="93dp"
        android:layout_height="47dp"
        android:layout_alignParentBottom="true"
        android:layout_alignParentStart="true"
        android:layout_marginBottom="177dp"
        android:layout_marginStart="14dp"
        android:text="longitude"
        android:textSize="18sp" />

    <TextView
        android:id="@+id/longitude"
        android:layout_width="238dp"
        android:layout_height="45dp"
        android:layout_alignStart="@+id/ip"
        android:layout_alignTop="@+id/textView7"
        android:textSize="18sp" />

    <Button
        android:id="@+id/button"
        android:layout_width="261dp"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true"
        android:layout_marginBottom="119dp"
        android:background="@android:color/holo_blue_dark"
        android:text="Phone Info" />

    <TextView
        android:id="@+id/textView9"
        android:layout_width="match_parent"
        android:layout_height="94dp"
        android:layout_alignParentTop="true"
        android:layout_alignStart="@+id/imei"
        android:layout_marginStart="-132dp"
        android:layout_marginTop="0dp"
        android:background="@android:color/holo_green_dark"
        android:gravity="center"
        android:text="SEN PORTABLE"
        android:textColor="@android:color/holo_orange_dark"
        android:textSize="30sp"
        android:textStyle="bold" />

    <Button
        android:id="@+id/mapbouton"
        android:layout_width="261dp"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true"
        android:layout_marginBottom="51dp"
        android:background="@android:color/holo_orange_light"
        android:text="Map" />
</RelativeLayout>